<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user1.urnextapp.addDN">


    <Button
        android:id="@+id/selectImage"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button"
        android:drawableTop="@drawable/ic_image_black_24dp"
        android:fontFamily="@font/trebuc"
        android:shadowColor="#e2e2e2"
        android:text="Image"
        android:textAllCaps="false"
        android:textColor="#204171"
        android:textSize="18sp"
        android:textStyle="normal"

        />

    <Button
        android:id="@+id/selectVideo"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/trebuc"
        android:shadowColor="#e2e2e2"
        android:drawableTop="@drawable/ic_videocam_black_24dp"
        android:text="Video"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/selectFashion"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/trebuc"
        android:shadowColor="#e2e2e2"
        android:text="Fashion"
        android:drawableTop="@drawable/ic_email_black_24dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:fontFamily="@font/trebuc"
        android:textColor="#4095c6"
        android:text="Please choose file to upload..." />

    <Button
        android:id="@+id/selectBook"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/button"
        android:fontFamily="@font/trebuc"
        android:shadowColor="#e2e2e2"
        android:text="Book"
        android:drawableTop="@drawable/ic_bookmark_black_24dp"
        android:textAllCaps="false"
        android:textColor="#204171"
        android:textSize="18sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/logout3"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="302dp"
        android:background="@drawable/button"
        android:fontFamily="@font/trebuc"
        android:text="Log Out"

        android:textAllCaps="false"
        android:textColor="#204171" />

</FrameLayout>
